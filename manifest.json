{
  "manifest_version": 3,
  "name": "Active Programmer Mode",
  "version": "1.0",
  "description": "Buat yang suka ngoding sambil “curi-curi waktu” buka medsos, sini pasang ini biar kerja bener, bukan cuma numpang lewat!",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "toggle-focus-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Aktifkan / nonaktifkan focus mode"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["block.html"],
    "matches": ["<all_urls>"]
  }]
}